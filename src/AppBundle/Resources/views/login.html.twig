<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>Bejelentkezés</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
</head>
{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="row">
        <div class="container col-sm-8 col-sm-offset-2">
            <form action="{{ path('login') }}" method="post">
                <div class="form-group">
                    <label for="username">Felhasználó</label>
                    <input class="form-control" name="_username" id="username" type="text" placeholder="username" value="{{ last_username }}">
                </div>
                <div class="form-group">
                    <label for="password">Jelszó</label>
                    <input class="form-control" name="_password"id="password"  type="password" placeholder="password">
                </div>
                <button class="btn btn-danger" type="submit">Belépés</button>
            </form>
        </div>
    </div>
{% endblock %}