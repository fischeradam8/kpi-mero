<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>Regisztráció</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
</head>
{% block body %}
<div class="row">
    <div class="container col-sm-8 col-sm-offset-2">
        {{ form_start(form, {'class': 'form-horizontal'}) }}
        <div class="form-group">
            {{ form_row(form.username, {'class': 'input-group'}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.password.first, {'class': 'input-group'}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.password.second, {'class': 'input-group'}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.displayName, {'class': 'input-group'}) }}
        </div>
        <button type="submit">Register!</button>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}